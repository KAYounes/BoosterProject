<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAF7"
    tools:context=".ui.destinations.ItemDetailsFragment">

    <ImageView
        android:id="@+id/newsThumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/newsthumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/quit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detailInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/blue_yellow_grad_bg_round"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/newsContentScrollable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newsThumbnail">

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="Unemployment rate reaches 2-year high of 6.9% on octber , shows CMIE data ; key things to know "
            android:textColor="@color/headlinesText"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/newslPublishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="08 Nov 2018 / 04:43 PM"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/newsTitle"
            app:layout_constraintTop_toBottomOf="@id/newsTitle" />

        <TextView
            android:id="@+id/newsSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Financialexpress.com"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/newsTitle"
            app:layout_constraintTop_toBottomOf="@id/newslPublishTime" />

        <ImageView
            android:id="@+id/shareNews"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/share_icon"
            app:layout_constraintBottom_toBottomOf="@id/newsSource"
            app:layout_constraintEnd_toStartOf="@id/saveNews" />

        <ImageView
            android:id="@+id/saveNews"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/save_icon"
            app:layout_constraintBottom_toBottomOf="@id/newsSource"
            app:layout_constraintEnd_toEndOf="@id/newsTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/newsContentScrollable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="40dp"
        android:fillViewport="false"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/detailInformation"
        app:layout_constraintStart_toStartOf="@id/detailInformation"
        app:layout_constraintTop_toBottomOf="@id/detailInformation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/newsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="In a bad news for the labour markets, the unemployment rate in the country was recorded at 6.9 percent in October 2018, highest in 2 years, according to the Centre for Monitoring Indian Economy (CMIE) date."
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/newsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In a bad news for the labour markets, the unemployment rate in the country was recorded at 6.9 percent in October 2018, highest in 2 years, according to the Centre for Monitoring Indian Economy (CMIE) data. The number was 6.75 in October last year. A sharp fall in number of people employed was observed as the estimated number of persons employed during October 2018 at 397 million was 2.4 percent lower than the 407 million persons employed in October 2017, CMIE October data showed. In a bad news for the labour markets, the unemployment rate in the country was recorded at 6.9 percent in October 2018, highest in 2 years, according to the Centre for Monitoring Indian Economy (CMIE) data. The number was 6.75 in October last year. A sharp fall in number of people employed was observed as the estimated number of persons employed during October 2018 at 397 million was 2.4 percent lower than the 407 million persons employed in October 2017, CMIE October data showed."
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/readMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_grad_bg_round"
                android:drawableStart="@drawable/find"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="Read More !"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>